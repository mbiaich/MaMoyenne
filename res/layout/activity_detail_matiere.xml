<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/detailMatiereLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subjectDetails"
            style="?android:attr/listSeparatorTextViewStyle" />

        <TextView
            android:id="@+id/nomMatiereLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subjectNameLabel" 
             />

        <EditText
            android:id="@+id/nomMatiereInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" >

            <requestFocus
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </EditText>

        <TextView
            android:id="@+id/coeffLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coefLabel" />

        <EditText
            android:id="@+id/coefficietMatiereInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/green_button"
                android:onClick="updateMatiere"
                android:text="@string/modify" />

            <Button
                android:id="@+id/btnFrmCreateMatiere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/red_button"
                android:onClick="deleteMatiere"
                android:text="@string/delete" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>