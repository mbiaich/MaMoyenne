<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ajoutMatiereLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/addSubject" />

        <TextView
            android:id="@+id/nomMatiereLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subjectNameLabel" >
        </TextView>

        <EditText
            android:id="@+id/nomMatiereInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/coefficientMatiereLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/coefLabel" >
        </TextView>
          <EditText
                android:id="@+id/coefficietMatiereInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="createMatiere"
                android:text="@string/register" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>