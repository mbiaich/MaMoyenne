    tools:context="fr.esgi.android.mamoyenne.MainActivity" >

    <TextView
        android:id="@+id/messageAccueil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:singleLine="false"
        android:text="Votre Moyenne Generale est de :"
        android:textAlignment="center"
        android:textColor="@android:color/white" 
        android:gravity="center"
        />

    <TextView
        android:id="@+id/myenneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/textview_round"
        android:gravity="center"
        android:text="TextView" />

    <Button
        android:id="@+id/gestionNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp"
        android:background="@drawable/bouton_arrondi"
        android:backgroundTint="@android:color/black"
        android:gravity="center"
